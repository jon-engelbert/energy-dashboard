	font-size: 13px;
	font-weight: normal;
	padding: 8px;
}

#grid2 td {
	background: none repeat scroll 0 0 #E8EDFF;
	border-bottom: 1px solid #FFFFFF;
	border-top: 1px solid transparent;
	color: #666699;
	padding: 8px;
}

#grid2 tr:hover td {
	background: none repeat scroll 0 0 #D0DAFD;
	color: #333399;
}

